{
  "name": "dynamis-messaging-service",
  "version": "1.0.0",
  "description": "Backend messaging service for Dynamis",
  "main": "server.js",
  "type": "module",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "seed": "node scripts/seed-db.js",
    "migrate": "node migrations/migrate.js",
    "prettier": "prettier --write \"**/*.{js,jsx,json,md}\"",
    "test": "NODE_OPTIONS=--experimental-vm-modules jest",
    "test:watch": "NODE_OPTIONS=--experimental-vm-modules jest --watch"
  },
  "dependencies": {
    "compression": "^1.7.4",
    "connect-redis": "^7.1.0",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "crypto": "^1.0.1",
    "csurf": "^1.11.0",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^6.9.0",
    "express-session": "^1.17.3",
    "express-validator": "^7.0.1",
    "handlebars": "^4.7.8",
    "helmet": "^7.0.0",
    "http-errors": "^2.0.0",
    "mongoose": "^7.5.0",
    "morgan": "^1.10.0",
    "node-cache": "^5.1.2",
    "node-telegram-bot-api": "^0.61.0",
    "nodemailer": "^7.0.5",
    "rate-limiter-flexible": "^2.4.1",
    "redis": "^4.6.7",
    "sanitize-html": "^2.11.0",
    "uuid": "^9.0.1",
    "winston": "^3.10.0",
    "winston-daily-rotate-file": "^4.7.1"
  },
  "devDependencies": {
    "@faker-js/faker": "^8.4.1",
    "eslint": "^8.47.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^5.0.0",
    "jest": "^29.6.4",
    "nodemon": "^3.0.1",
    "prettier": "^3.0.2",
    "supertest": "^6.3.3"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "jest": {
    "testEnvironment": "node",
    "transform": {},
    "collectCoverage": true,
    "coverageReporters": [
      "text",
      "lcov"
    ],
    "testMatch": [
      "**/__tests__/**/*.test.js"
    ],
    "moduleFileExtensions": [
      "js",
      "json"
    ],
    "extensionsToTreatAsEsm": [
      ".js"
    ]
  },
  "prettier": {
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5",
    "printWidth": 100,
    "tabWidth": 2,
    "useTabs": false,
    "bracketSpacing": true,
    "arrowParens": "avoid"
  }
}
