# Server Configuration
NODE_ENV=development
PORT=3000

# CORS Configuration
# Comma-separated list of allowed origins (e.g., http://localhost:3000,https://example.com)
# Use '*' to allow all origins (not recommended for production)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080

# Database Configuration
# Format: mongodb://[username:password@]host1[:port1][,...hostN[:portN]]/database[?options]
MONGODB_URI=mongodb://dynamisApp:your_secure_password@localhost:27017/dynamis_messaging?authSource=admin&retryWrites=true&w=majority

# Connection Pool Settings
MONGODB_POOL_SIZE=10
MONGODB_MIN_POOL_SIZE=2

# Authentication
MONGODB_USER=dynamisApp
MONGODB_PASSWORD=your_secure_password

# SSL/TLS Configuration (for production)
# MONGODB_SSL=true
# MONGODB_SSL_VALIDATE=true
# MONGODB_ALLOW_INVALID_CERTS=false

# Replica Set Configuration (if using replica sets)
# MONGODB_REPLICA_SET=rs0
# MONGODB_READ_PREFERENCE=primary

# Telegram Bot Configuration (optional)
TELEGRAM_BOT_TOKEN=your_telegram_bot_token
TELEGRAM_CHAT_ID=your_telegram_chat_id

# JWT Configuration (for future authentication)
JWT_SECRET=your_jwt_secret_key
JWT_EXPIRES_IN=7d

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes in milliseconds
RATE_LIMIT_MAX_REQUESTS=100   # Max requests per window per IP
