{
  "version": 2,
  "builds": [
    {
      "src": "server.js",
      "use": "@vercel/node"
    },
    {
      "src": "*.html",
      "use": "@vercel/static"
    },
    {
      "src": "public/**/*",
      "use": "@vercel/static"
    },
    {
      "src": "css/*",
      "use": "@vercel/static"
    },
    {
      "src": "js/*",
      "use": "@vercel/static"
    },
    {
      "src": "images/*",
      "use": "@vercel/static"
    },
    {
      "src": "_includes/*",
      "use": "@vercel/static"
    },
    {
      "src": "practiceArea/*.html",
      "use": "@vercel/static"
    }
  ],
  "rewrites": [
    { 
      "source": "/api/(.*)", 
      "destination": "/server.js"
    },
    { 
      "source": "/(.*)", 
      "destination": "/index.html"
    }
  ],
  "redirects": [
    {
      "source": "/:path*",
      "has": [
        {
          "type": "host",
          "value": "www.thegreatrecoveryit.com"
        }
      ],
      "destination": "https://thegreatrecoveryit.com/:path*",
      "permanent": true
    }
  ]
}
